<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
        android:background="@drawable/citymap"
       >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="322dp"
        android:layout_height="106dp"
        android:fontFamily="sans-serif-black"
        android:text="NY"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="306dp"
            android:layout_height="331dp"
            android:text="37"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.847"/>
    <TextView
            android:id="@+id/textView3"
            android:layout_width="215dp"
            android:layout_height="108dp"
            android:text="39/26"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="H/L"
            android:textSize="30sp"
            android:layout_width="87dp"
            android:layout_height="60dp" android:id="@+id/highLowTV"
            app:layout_constraintEnd_toStartOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.272" app:layout_constraintVertical_bias="0.874"/>

</androidx.constraintlayout.widget.ConstraintLayout>